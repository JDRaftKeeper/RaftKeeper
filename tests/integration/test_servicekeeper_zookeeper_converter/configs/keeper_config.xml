<yandex>
    <service>
        <my_id>1</my_id>
        <host>node</host>
        <log_dir>/var/lib/clickhouse/coordination/raft_log</log_dir>
        <snapshot_dir>/var/lib/clickhouse/coordination/raft_snapshot</snapshot_dir>
        <snapshot_start_time>7200</snapshot_start_time>
        <snapshot_create_interval>86400</snapshot_create_interval>
        <forwarding_port>5101</forwarding_port>
        <service_port>5102</service_port>
        <internal_port>5103</internal_port>
        <thread_count>16</thread_count>
        <coordination_settings>
            <raft_logs_level>trace</raft_logs_level>
            <nuraft_thread_size>32</nuraft_thread_size>
            <session_timeout_ms>80000</session_timeout_ms>
            <operation_timeout_ms>50000</operation_timeout_ms>
            <snapshot_distance>75</snapshot_distance>
        </coordination_settings>

        <remote_servers>
            <async_replication>false</async_replication>
        </remote_servers>
    </service>

</yandex>
