<raftkeeper>
    <keeper>
        <port>8101</port>
        <forwarding_port>8102</forwarding_port>
        <my_id>1</my_id>
        <host>node1</host>
        <snapshot_create_interval>10000</snapshot_create_interval>

        <raft_settings>
            <operation_timeout_ms>1000</operation_timeout_ms>
            <min_session_timeout_ms>1000</min_session_timeout_ms>
            <max_session_timeout_ms>12000</max_session_timeout_ms>
            <snapshot_distance>3000000</snapshot_distance>
            <raft_logs_level>debug</raft_logs_level>
        </raft_settings>

        <cluster>
            <server>
                <id>1</id>
                <host>node1</host>
                <priority>0</priority>
            </server>
            <server>
                <id>2</id>
                <host>node2</host>
                <priority>1</priority>
            </server>
            <server>
                <id>3</id>
                <host>node3</host>
                <priority>1</priority>
            </server>
        </cluster>
    </keeper>
</raftkeeper>
